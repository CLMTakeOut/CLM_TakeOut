<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clm.mapper.UserMapper">
    <resultMap id="UserMap" type="User">
        <result column="user_id"  property="id"/>
        <result column="user_name"  property="userName"/>
        <result column="user_pwd"  property="userPwd"/>
        <result column="user_portrait"  property="portrait"/>
    </resultMap>
<!--    结果集映射-->
    <select id="getUsers"  resultMap="UserMap">
        select * from user;
    </select>
    <select id="getUserById" resultMap="UserMap">
        select * from user where user_id = #{id};
    </select>
    <select id="getUserByTelephone" resultMap="UserMap">
        select * from user where telephone = #{telephone};
    </select>
    <select id="getUserByTelephoneAndPwd" resultMap="UserMap">
        select * from user where telephone = #{telephone} and pwd = #{pwd};
    </select>
</mapper>